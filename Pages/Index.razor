        new Car { Name="EcoSport", Brand="Ford", Count=121, Visibility=true, Color="#eee8aa"},
        new Car { Name="Swift", Brand="Maruti", Count=143, Visibility=false, Color="#daa520"},
        new Car { Name="Baleno", Brand="Maruti", Count=454, Visibility=false, Color="#daa520"},
        new Car { Name="Vitara Brezza", Brand="Maruti", Count=545, Visibility=true, Color="#e6be8a"},
        new Car { Name="A3 Cabriolet", Brand="Audi", Count=123, Visibility=true, Color="#e6be8a"}
    };
}
