@page "/"

<SfTreeMap DataSource="Cars" TValue="Car" WeightValuePath="Count" ColorValuePath="Color"
                             >
    <TreeMapLeafItemSettings LabelPath="Name">
      @*  <TreeMapLeafColorMappings>
            <TreeMapLeafColorMapping LeafValue="Ford" Color='new string[]{ "green" }'></TreeMapLeafColorMapping>
            <TreeMapLeafColorMapping LeafValue="Audi" Color='new string[]{ "red" }'></TreeMapLeafColorMapping>
            <TreeMapLeafColorMapping LeafValue="Maruti" Color='new string[]{ "orange" }'
                                     ShowLegend=false></TreeMapLeafColorMapping>
        </TreeMapLeafColorMappings>*@
    </TreeMapLeafItemSettings>
    <TreeMapLegendSettings Visible=true Position="LegendPosition.Top" 
                           ShowLegendPath="Visibility"
                           RemoveDuplicateLegend=true
                           ValuePath="Brand" Height="50px" Width="200px"></TreeMapLegendSettings>
 </SfTreeMap>

@code {
    public class Car
    {
        public string Name { get; set; }
        public string Brand { get; set; }
        public int Count { get; set; }
        public bool Visibility { get; set; }
        public string Color { get; set; }
    };
